{
  "name": "flowone",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend/*",
    "src",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend/voice-studio\" \"npm run dev --workspace=frontend/interactive-studio\" \"npm run dev --workspace=src\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:voice": "npm run dev --workspace=frontend/voice-studio",
    "dev:interactive": "npm run dev --workspace=frontend/interactive-studio",
    "dev:studio": "npm run dev --workspace=src",
    "build": "npm run build --workspaces",
    "install-all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}