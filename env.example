# FlowOne Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# CORE API KEYS (Required)
# =============================================================================

# Gemini API - Required for AI agent functionality
# Get your key from: https://ai.google.dev
GEMINI_API_KEY=your_gemini_api_key_here

# Daily.co API - Required for voice/WebRTC functionality
# Get your key from: https://dashboard.daily.co
DAILY_API_KEY=your_daily_api_key_here


# Daily domain subdomain (e.g., "myteam" for https://myteam.daily.co)
DAILY_SUBDOMAIN=your_daily_subdomain_here
# Avatar room privacy (public or private). Default is public.
DAILY_AVATAR_PRIVACY=public

# Langfuse - Required for observability and tracing
# Get your keys from: https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# TAVUS AVATAR INTEGRATION (Optional but Recommended)
# =============================================================================

# Tavus API - For photorealistic avatar streaming
# Get your API key from: https://www.tavus.io
TAVUS_API_KEY=your_tavus_api_key_here

# Default replica ID for agents without specific avatars
# Create a replica in Tavus dashboard and use its ID
TAVUS_DEFAULT_REPLICA_ID=your_default_replica_id_here

# Tavus API base URL (defaults to https://tavusapi.com/v2). Override if instructed by Tavus.
TAVUS_BASE_URL=https://tavusapi.com/v2

# Avatar mode: 'pipecat_daily' renders into a Daily room; 'phoenix_rest' returns a direct video URL.
# IMPORTANT: pipecat_daily requires daily-python which is NOT available on Windows!
# - On Windows: Use phoenix_rest (currently broken - requires persona management)
# - On Linux/macOS: Use pipecat_daily (recommended)
# - On Windows with WSL: Use pipecat_daily in WSL environment
# See TAVUS_AVATAR_WINDOWS_LIMITATION.md for details
TAVUS_AVATAR_MODE=phoenix_rest  # Default for Windows compatibility

# Legacy boolean flag (kept for backward compatibility)
USE_TAVUS_PIPECAT_VIDEO=false

# Optional explicit replica override (falls back to TAVUS_DEFAULT_REPLICA_ID)
TAVUS_REPLICA_ID=


# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database (default for development)
DATABASE_URL=sqlite:///./flowone.db

# Alternative: PostgreSQL for production
# DATABASE_URL=postgresql://username:password@localhost:5432/flowone

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Backend settings
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Frontend settings
VITE_API_URL=http://localhost:8000
VITE_API_WS=ws://localhost:8000

# =============================================================================
# PRODUCTION PIPELINE (Three-Model: STT → LLM → TTS)
# =============================================================================

# Enable production pipeline instead of Gemini Live API
# Recommended for production: better observability, function calling, consistency
USE_PRODUCTION_PIPELINE=false

# Deepgram STT (Speech-to-Text)
# Get your API key from: https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia TTS (Text-to-Speech)
# Get your API key from: https://cartesia.ai
CARTESIA_API_KEY=your_cartesia_api_key_here

# Alternative TTS/STT options (optional)
GOOGLE_STT_API_KEY=your_google_stt_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Feature flags
ENABLE_AVATARS=true
ENABLE_VOICE=true
ENABLE_TRACING=true
ENABLE_MULTI_AGENT=true
ENABLE_SCREEN_SHARING=false

# =============================================================================
# PRODUCTION OVERRIDES (Uncomment for production)
# =============================================================================

# Production database
# DATABASE_URL=postgresql://user:pass@prod-db:5432/flowone

# Production API URLs
# VITE_API_URL=https://api.flowone.com
# VITE_API_WS=wss://api.flowone.com

# Production Langfuse
# LANGFUSE_HOST=https://your-langfuse-instance.com
